<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/planner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planner"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08/05/2021"
        app:layout_constraintTop_toBottomOf="@+id/planner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"/>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/twelveam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 AM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/oneam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 AM"
                app:layout_constraintTop_toBottomOf="@+id/twelveam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/twoam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 AM"
                app:layout_constraintTop_toBottomOf="@+id/oneam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/threeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 AM"
                app:layout_constraintTop_toBottomOf="@+id/twoam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/fouram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 AM"
                app:layout_constraintTop_toBottomOf="@+id/threeam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/fiveam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 AM"
                app:layout_constraintTop_toBottomOf="@+id/fouram"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/sixam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 AM"
                app:layout_constraintTop_toBottomOf="@+id/fiveam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/sevenam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 AM"
                app:layout_constraintTop_toBottomOf="@+id/sixam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/eightam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 AM"
                app:layout_constraintTop_toBottomOf="@+id/sevenam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/nineam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 AM"
                app:layout_constraintTop_toBottomOf="@+id/eightam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/tenam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 AM"
                app:layout_constraintTop_toBottomOf="@+id/nineam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/elevenam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 AM"
                app:layout_constraintTop_toBottomOf="@+id/tenam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/twelvepm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 PM"
                app:layout_constraintTop_toBottomOf="@+id/elevenam"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"  />

            <TextView
                android:id="@+id/onepm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 PM"
                app:layout_constraintTop_toBottomOf="@+id/twelvepm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/twopm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 PM"
                app:layout_constraintTop_toBottomOf="@+id/onepm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/threepm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 PM"
                app:layout_constraintTop_toBottomOf="@+id/twopm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/fourpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 PM"
                app:layout_constraintTop_toBottomOf="@+id/threepm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/fivepm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "5 PM"
                app:layout_constraintTop_toBottomOf="@+id/fourpm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/sixpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 PM"
                app:layout_constraintTop_toBottomOf="@+id/fivepm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/sevenpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 PM"
                app:layout_constraintTop_toBottomOf="@+id/sixpm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/eightpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 PM"
                app:layout_constraintTop_toBottomOf="@+id/sevenpm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/ninepm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 PM"
                app:layout_constraintTop_toBottomOf="@+id/eightpm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/tenpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 PM"
                app:layout_constraintTop_toBottomOf="@+id/ninepm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/elevenpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 PM"
                app:layout_constraintTop_toBottomOf="@+id/tenpm"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

